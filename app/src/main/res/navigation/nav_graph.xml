<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.aplikasi_gamedex.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_SalesFragment"
            app:destination="@id/SalesFragment" />

    </fragment>
    <fragment
        android:id="@+id/SalesFragment"
        android:name="com.example.aplikasi_gamedex.SalesFragment"
        android:label="@string/sales_fragment_label"
        tools:layout="@layout/fragment_sales">

        <action
            android:id="@+id/action_SalesFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
        <!-- TAMBAHKAN ACTION INI KEMBALI -->
        <action
            android:id="@+id/action_SalesFragment_to_DetailsFragment"
            app:destination="@id/DetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.example.aplikasi_gamedex.DetailsFragment"
        android:label="@string/details_fragment_label"
        tools:layout="@layout/fragment_detail_game" >
        <!-- TAMBAHKAN ARGUMEN INI KEMBALI -->
        <argument
            android:name="gameID"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
</navigation>