<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tema Aplikasi"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Tombol Mode Terang -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLightMode"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Mode Terang"
        android:textColor="@color/black"
        android:background="@drawable/lightmode_button"
        app:backgroundTint="@null"
        app:cornerRadius="24dp"
        app:icon="@drawable/lightmodeicon"
        app:iconSize="24dp"
        app:iconTint="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDarkMode" />

    <!-- Tombol Mode Gelap -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDarkMode"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Mode Gelap"
        android:textColor="@color/white"
        android:background="@drawable/darkmode_button"
        app:backgroundTint="@null"
        app:cornerRadius="24dp"
        app:icon="@drawable/darkmodeicon"
        app:iconSize="24dp"
        app:iconTint="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="12dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTema"
        app:layout_constraintStart_toEndOf="@id/btnLightMode"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
