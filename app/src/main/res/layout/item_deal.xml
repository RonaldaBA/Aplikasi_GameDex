<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#1E1E1E"
    android:layout_marginBottom="8dp">

    <!-- Store origin -->
    <TextView
        android:id="@+id/storeOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/salePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale Price"
        android:textColor="#8DF7A4"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/normalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal Price"
        android:textColor="#AAA"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/savings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings"
        android:textColor="#F78D8D"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/metacritic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metacritic"
        android:textColor="#FFD700"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date"
        android:textColor="#AAA"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/dealRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal Rating"
        android:textColor="#8DA4F7"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>
</LinearLayout>