<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <!-- Banner + Title -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#222222">

            <ImageView
                android:id="@+id/game_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"/>
        </FrameLayout>

        <!-- Deals & Prices -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deals &amp; Prices"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp"/>

        <!-- Go to official website button -->
        <Button
            android:id="@+id/go_official_website_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go official website"
            android:backgroundTint="#8DA4F7"
            android:textColor="#000"
            android:layout_margin="16dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>